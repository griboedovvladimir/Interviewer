{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "ordered-imports": [false],
    "object-literal-sort-keys": [false],
    "no-empty": false,
    "no-console": false,
    "prefer-const": false,
    "jsdoc-format": true,
    "experimentalDecorators":true
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "server/server.js",
      "src/material.js",
      "public/material.js",
      "jest.config.js",
      "src/**/*.test.tsx"
    ]
  }
}
